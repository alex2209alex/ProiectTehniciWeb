<form id="form_inreg" method="post" class="date" action="<%=locals.action%>" enctype="multipart/form-data">
    <p>
        <label>
            Nume: <input type="text" name="nume" required id="inp-nume">
        </label>
    </p>
    <p>
        <label>
            Prenume: <input type="text" name="prenume" required id="inp-prenume">
        </label>
    </p>
    <p>
        <label>
            Username: <input type="text" name="username" required id="inp-username" pattern="[A-Za-z0-9]+">
        </label>
    </p>
    <p>
        <label>
            Parola: <input type="password" name="parola" required id="parl">
        </label>
    </p>
    <p id="p-reintrod">
        <label>
            Reintroduceti parola: <input type="password" name="rparola" required id="rparl">
        </label>
    </p>
    <p>
        <label>
            Email: <input type="text" name="email" required id="inp-email" size="50">
        </label>
    </p>
    <p>
        <label>
            Culoare text chat:
            <select name="culoare_chat" id="sel-culoare">
                <option value="black" selected>Negru</option>
                <option value="green">Verde</option>
                <option value="blue">Albastru</option>
                <option value="red">Rosu</option>
            </select>
        </label>
    </p>
    <p>
        <label>
            Ocupatie:
            <select name="ocupatie" id="sel-ocupatie">
                <option value="default" selected>Nu doresc sa spun</option>
                <option value="elev">Elev</option>
                <option value="programator">Programator</option>
                <option value="inginer">Inginer</option>
                <option value="alceva" id="ocupatie-alceva">Alceva</option>
            </select>
        </label>
    </p>
    <p>
        <label>
            Poza: <input type="file" name="poza">
        </label>			
    </p>
    <p>		
        <input type="submit" value="Trimite">
        <input type="reset" value="Reseteaza">
    </p>
</form>